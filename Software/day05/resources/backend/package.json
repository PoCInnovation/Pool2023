{
  "name": "day05-backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "start:prod": "npm run db:migrate:dev && node dist/server.js",
    "start:dev": "npm run db:migrate:dev && nodemon src/server.ts",
    "db:seed": "ts-node -r dotenv/config -r ./src/seed.ts",
    "db:up": "docker-compose -f docker-compose.dev.yaml up -d",
    "db:down": "docker-compose -f docker-compose.dev.yaml down -v",
    "db:migrate:dev": "prisma migrate dev && npm run db:generate",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio -p 8888",
    "lint": "eslint src/**/*.ts",
    "lint:format": "eslint --fix src/**/*.ts",
    "wait": "sleep 250"
  },
  "author": "Adrien Fort",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/node": "^17.0.8",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@prisma/client": "^3.8.0",
    "@types/express": "^4.17.13",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^11.0.0",
    "env-var": "^7.1.1",
    "express": "^4.17.2",
    "http-status": "^1.5.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^3.8.0",
    "uuid": "^8.3.2",
    "winston": "^3.4.0",
    "zod": "^3.11.6"
  }
}
